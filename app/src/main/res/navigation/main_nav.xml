<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_na"
    app:startDestination="@id/recipesFragment">

    <fragment
        android:id="@+id/recipesFragment"
        android:name="com.tutorial.foody.ui.fragments.recipes.RecipesFragment"
        android:label="fragment_recipes"
        tools:layout="@layout/fragment_recipes" >
        <action
            android:id="@+id/action_recipesFragment_to_recipesFilterBottomSheet"
            app:destination="@id/recipesFilterBottomSheet" />
        <argument
            android:name="backFromBottomSheet"
            app:argType="boolean"
            android:defaultValue="false" />
    </fragment>
    <fragment
        android:id="@+id/favoriteRecipesFragment"
        android:name="com.tutorial.foody.ui.FavoriteRecipesFragment"
        android:label="fragment_favorite_recipes"
        tools:layout="@layout/fragment_favorite_recipes" />
    <fragment
        android:id="@+id/funFactsFragment"
        android:name="com.tutorial.foody.ui.FunFactsFragment"
        android:label="fragment_fun_facts"
        tools:layout="@layout/fragment_fun_facts" />
    <dialog
        android:id="@+id/recipesFilterBottomSheet"
        android:name="com.tutorial.foody.ui.fragments.recipes.bottomsheet.RecipesFilterBottomSheet"
        android:label="fragment_filter_bottom_sheet"
        tools:layout="@layout/fragment_filter_bottom_sheet" >
        <action
            android:id="@+id/action_recipesFilterBottomSheet_to_recipesFragment"
            app:destination="@id/recipesFragment" />
    </dialog>
</navigation>